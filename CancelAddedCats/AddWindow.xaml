<Window x:Class="CancelAddedCats.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CancelAddedCats"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="Додати котів" Height="250" Width="300">
    <Grid>
        <StackPanel Width="250" HorizontalAlignment="Center" VerticalAlignment="Center" Height="230">
            <Label Margin="20" Content="Додавання котів" FontSize="16" HorizontalAlignment="Center" FontWeight="Bold"
                   Foreground="Red"/>
            <ProgressBar x:Name="catProgres" Margin="10" Height="30" ValueChanged="catProgres_ValueChanged"/>
            <Button Name="btnCancel" Margin="20" Content="Скасувати" FontSize="16" Width="100" Height="30" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
